<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imvImage"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/dummy_image" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imvStatus"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/background_status"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/imvImage"
        app:layout_constraintEnd_toEndOf="@+id/imvImage"
        app:layout_constraintStart_toEndOf="@+id/imvImage"
        tools:src="@drawable/ic_status_online" />


    <TextView
        android:id="@+id/tvName"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvLastOnline"
        app:layout_constraintStart_toEndOf="@+id/imvImage"
        app:layout_constraintTop_toTopOf="@+id/imvImage"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Ngo hai doan" />

    <TextView
        android:id="@+id/tvLastOnline"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imvImage"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        tools:text="15 phút trước" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="84dp"
        android:background="#31000000"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>